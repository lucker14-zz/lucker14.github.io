.menu
    flexbox()
    justify-content space-between
    flex-flow row nowrap
    align-items center
    padding 15px 15px 0
    z-index 3
    min-width 100%

    max-width 1355px
    margin-left auto

    @media (min-width $screen-tn)
        max-width none
    @media (min-width $screen-xs)
        padding 20px 20px 0
    @media (min-width $screen-md)
        padding 30px 30px 0
    @media (min-width 1440px)
        padding-left 106px


    +e('logo')
        img
            width 30px

            @media (min-width $screen-tn)
                width 40px
            @media (min-width $screen-sm)
                width 170px
            @media (min-width $screen-lg)
                width 195px


    +e('hrefs')
        flexbox()
        justify-content flex-end
        align-items center
        flex-wrap wrap


    +e('cta')
        display none

        @media (min-width $screen-sm)
            display inline-block
            text-transform uppercase
            order 2
            padding-left 15px
            padding-right 15px
            order 1
            margin-right 10px
        @media (min-width $screen-md)
            padding-left 30px
            padding-right 30px
            margin-right 20px


    +e('href')
        color $brand-primary
        font-weight 600
        line-height 1.4
        margin-right 20px
        order 1
        font-size 14px

        @media (min-width $screen-xs)
            font-size 18px
        @media (min-width $screen-lg)
            margin-right 40px

        +m('account')
            span
                display none
                @media (min-width $screen-xs)
                    display inline

        +m('shadow')
            text-shadow 0 0 2px alpha($black, 50%)


    +e('toggle')
        order 3
        color $white
        font-weight 600
        padding-left 15px
        padding-right 15px

        .hamburger-box
            top 1px
            margin-left 8px

        .label
            font-size 14px

        @media (min-width $screen-sm)
            flex(none)
            .label
                font-size 14px
                display inline-block
            .hamburger-box
                margin-left 9px
        @media (min-width $screen-md)
            padding-left 20px
            padding-right 20px

    .button:not(.button--outline):not(.button--white)
        padding-top 15px
