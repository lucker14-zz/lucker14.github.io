.success-modal

    +e('list')
        position relative
        margin 40px auto 20px
        text-align left
        max-width 620px
        width 100%

        @media (min-width $screen-sm)
            margin-bottom 40px
        @media (min-width $screen-md)
            margin-top 80px

        &:before
            content ''
            position absolute
            left 20px
            top 20px
            bottom 20px
            width 1px
            background $gray-lighter
            z-index 1


    +e('item')
        font-size 0
        margin-bottom 20px
        flexbox()
        justify-content flex-start
        align-content flex-start

        @media (min-width $screen-sm)
            margin-bottom 30px

        &:last-child
            margin-bottom 0


    +e('number')
        position relative
        z-index 2
        border 1px solid $gray-lighter
        border-radius 50%
        background $white
        color $gray-lighter
        font-size 20px
        font-weight 600
        flex(1 100%)
        height 41px
        max-width @height
        line-height 38px
        text-align center

    p
        margin-left 20px

    .button
        margin-top 5px
