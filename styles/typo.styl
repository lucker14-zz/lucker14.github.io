body, html
    font-size 14px

h1, h2, h3, h4, h5, h6, p
    margin 0


h1
    font-size 34px
    font-weight 600
    line-height 0.98

    @media (min-width $screen-md)
        font-size 50px
    @media (min-width $screen-lg)
        font-size 60px
    @media (min-width $screen-pc)
        font-size 80px


h2
    font-size 34px
    font-weight 600
    line-height 1.1

    @media (min-width $screen-lg)
        font-size 50px


h3
    font-size 28px
    font-weight 600
    line-height 1.2

    @media (min-width $screen-lg)
        font-size 34px


h4
    font-size 23px
    font-weight 600
    line-height 1.17

    @media (min-width $screen-utn)
        font-size 26px
    @media (min-width $screen-lg)
        font-size 30px


h5
    font-size 20px
    font-weight 600
    line-height 1.4

    @media (min-width $screen-sm)
        font-size 24px


p, li
    font-size 20px
    color #828B99
    font-weight 400
    line-height 1.25


p
    max-width 600px
    margin-left auto
    margin-right auto


.homepage-href--border
    display inline-block
    vertical-align middle
    position relative

    &:before
        content ''
        display block
        position absolute
        left 0
        right 0
        bottom 0
        height 2px
        background transparent
        transition all 300ms $timing
        transform translate3d(0, 2px, 0)

    &:hover, &:focus
        &:before
            background alpha($white, 50%)
            transform translate3d(0, 0, 0)
