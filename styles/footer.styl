.footer
    background #211f25

    h3, h4, h5
        color $white

    p, li, h5 span
        color #b4adbd

    p, li
        font-size 14px
        @media (min-width $screen-xs)
            font-size 18px

    hr
        border 0
        height 0
        margin 0
        border-bottom 1px solid alpha($white, 5%)

    h3
        margin-bottom 10px

    +e('wrapper')
        position relative
        z-index 3
        max-width 1080px
        padding 0 20px
        box-sizing content-box
        margin 0 auto

        @media (min-width $screen-lg)
            padding 0 30px


    +e('content')
        flexbox()
        padding-top 40px
        padding-bottom 40px
        flex-wrap wrap
        justify-content center

        @media (min-width $screen-utn)
            justify-content space-between
        @media (min-width $screen-xs)
            justify-content center
        @media (min-width $screen-md)
            flex-wrap nowrap
            justify-content space-between
        @media (min-width $screen-pc)
            padding-top 70px
            padding-bottom 70px

        +m('stretch')
            justify-content stretch
            flex-wrap wrap
            @media (max-width $screen-md - 1px)
                padding-top 0
                padding-bottom 0
            @media (min-width $screen-lg)
                flex-wrap nowrap

    +e('contact')
        flex(1 100%)
        margin 0 0 30px
        max-width 480px

        a
            color currentColor

        @media (min-width $screen-sm)
            margin-left 30px
            margin-right 30px
        @media (min-width $screen-md)
            flex(none)
            margin 0 30px 0 0
            max-width none

    +e('box')
        background alpha(#000, 15%)
        border-radius $border-radius
        padding 29px 30px
        margin-bottom 20px
        flexbox()
        align-items center
        justify-content center
        flex-direction column

        @media (min-width $screen-utn)
            flex-direction row
        @media (min-width $screen-md)
            justify-content flex-start
        @media (min-width $screen-lg)
            padding-left 40px
            padding-right 40px

        img
            display block
            margin 0 0 20px
            @media (min-width $screen-utn)
                margin 0 27px 0 0

        a
            transition color $animation
            &:hover
                color $green

        &:nth-of-type(1)
            margin-top 27px
        &:last-child
            margin-bottom 0

    +e('hrefs')
        margin 0 0 30px

        @media (min-width $screen-utn)
            margin 0 20px 0 0
        @media (min-width $screen-xs)
            margin-right 30px

        h4:nth-of-type(2)
            margin-top 45px
        ul
            margin-top 13px

        a
            line-height 30px
            transition color $animation
            display block
            color currentColor
            &:hover
                color $white

    +e('col')
        margin 10px 0
        padding 15px 20px 20px
        border-bottom 1px solid alpha($white, 5%)
        flex(1 100%)
        text-align center

        @media (min-width $screen-md)
            flex(1 33%)
            border-right 1px solid alpha($white, 5%)
            border-bottom 0
        @media (min-width $screen-lg)
            text-align left
        @media (min-width $screen-pc)
            padding-left 40px
            padding-right 40px

        &:nth-of-type(1)
            padding-left 0
            @media (min-width $screen-lg)
                max-width 340px
        &:nth-of-type(2)
            border-right 0
            @media (min-width $screen-md)
                text-align right
            @media (min-width $screen-lg)
                text-align center
                border-right 1px solid alpha($white, 5%)
        &:nth-of-type(3)
            border-right 0
            text-align center
            max-width none
            padding-right 0
            border-bottom 0
            flex(1 100%)

            @media (max-width $screen-lg - 1px) and (min-width $screen-md)
                border-top 1px solid alpha($white, 5%)
                margin-bottom 0
                margin-top 25px
                padding-top 40px
                padding-bottom 0

            @media (min-width $screen-lg)
                max-width 260px
                text-align right
                flex(1 33%)

        a
            display inline-block
            vertical-align middle

        h5
            max-width 246px
            text-align center
            margin 0 auto 25px

            @media (min-width $screen-md)
                margin 0 0 25px
                text-align left

            &.pull
                @media (min-width $screen-sm)
                    display inline-block
                    vertical-align middle
                    margin 0 20px 0 0
                    max-width none
                @media (min-width $screen-lg)
                    max-width 190px
                    margin 0 0 25px auto

    +e('col-content')
        display inline-block
        vertical-align middle
        margin 0 auto
        text-align center

        @media (min-width $screen-md)
            text-align left

    +e('stores')
        white-space nowrap
        a
            display block
            margin 5px 0
            @media (min-width $screen-tn)
                display inline-block
                vertical-align middle
                margin 0

    +e('social')
        height 42px
        width @height
        border-radius 50%
        display inline-block
        vertical-align top
        color $white
        text-align center
        border 2px solid #4d4c51
        margin-right 15px
        padding 11px 0
        transition all $animation
        background transparent

        &:hover
            background alpha($white, 5%)

        &:last-child
            margin-right 0

    +e('credits')
        background #141117
        font-size 16px
        line-height 28px
        color $white
        text-align center

        .footer__content
            justify-content center

        @media (min-width $screen-md)
            text-align left
            .footer__content
                justify-content space-between

        a
            color currentColor

    +e('cookies')
        max-width 420px
        margin-bottom 20px

        @media (min-width $screen-md)
            margin-bottom 0

        a
            border-bottom 1px solid alpha($white, 30%)
            white-space nowrap
            transition border $animation
            &:hover
                border-bottom-color transparent

    +e('copy')
        text-align center
        display inline-block
        vertical-align top

        @media (min-width $screen-md)
            text-align right

        img
            display inline-block
            vertical-align baseline
            position relative
            top 6px
            margin-left 5px

    +e('languages')
        margin 5px 0 0 42px
        display inline-block
        vertical-align top
        font-size 0

        a
            display block
            &:nth-of-type(1)
                margin-bottom 10px

        img
            display block
            filter grayscale(100%)
            transition all $animation

            &.active, &:hover
                filter none
