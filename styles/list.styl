.list-container
    width 90%
    max-width 1280px
    margin 0 auto

.list-container .list-item {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between
}

.list-container .right {
    -webkit-box-orient: horizontal;
    -webkit-box-direction: reverse;
    -ms-flex-direction: row-reverse;
    flex-direction: row-reverse
}

.list-container .list-text-container {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -ms-flex-direction: column;
    flex-direction: column
}

.list-container h3 {
    color: #212737;
    font-size: 46px;
    font-weight: 600;
    line-height: 50px;
    margin-bottom: 35px;
    margin-top: 0
}

.list-container p {
    margin-top: 0;
    color: #212736;
    font-size: 22px;
    font-weight: 400;
    line-height: 34px;
    margin-bottom: 0;
    margin-left unset
    margin-right unset
}

.list-container .text-card {
    margin-left: 169px
}

.list-container .text-iphone {
    margin-left: 72px
}

.list-container .text-band {
    margin-right: 149px;
    margin-left: 50px
}

@media screen and (max-width:1065px) {
    .list-container .list-item {
        -webkit-box-orient: vertical;
        -webkit-box-direction: reverse;
        -ms-flex-direction: column-reverse;
        flex-direction: column-reverse;
        -webkit-box-align: center;
        -ms-flex-align: center;
        align-items: center;
        margin-bottom: 100px
    }
    .list-container .list-item img {
        margin-top: 30px;
        width: 90%;
        height: 90%
    }
    .list-container .list-item:nth-child(3) img {
        margin-right: 30px
    }
    .list-container .list-text-container {
        text-align: center;
        max-width: 600px;
        display: block
    }
    .list-container .text-band {
        margin-right: 0;
        margin-left: 0
    }
    .list-container .text-iphone {
        margin-left: 0
    }
    .list-container .text-card {
        margin-left: 0
    }
}