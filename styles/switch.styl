.switch
    display inline-block
    font-size 0
    margin 0 auto 20px
    max-width 400px
    width 100%
    flexbox()
    justify-content space-between
    border-bottom 1px solid #ECEFF7
    overflow hidden

    @media (min-width $screen-tn)
        padding 0 30px
    @media (min-width $screen-sm)
        margin-bottom 50px
    @media (min-width $screen-md)
        margin-top 20px


    +e('item')
        font-size 16px
        color $gray
        padding 13px 0
        user-select none
        cursor pointer
        position relative
        width 140px
        transition color $animation

        &:before
            position absolute
            content ''
            height 2px
            background $green
            bottom 0
            left 0
            right 0
            border-radius 2px 2px 0 0
            display block
            transition transform $animation
            transform translate3d(0, 2px, 0)



        &.active
            border-color $green
            color $green
            z-index 2
            &:before
                transform translate3d(0,0,0)
